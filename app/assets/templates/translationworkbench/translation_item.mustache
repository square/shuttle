<div class="entry">
  <!-- TRANSLATION SIDE -->
  <div class="row">
    <div class="eight columns left">
      <div class="translation-side"> 
        <textarea class="translation-area {{status}}">{{translation_copy}}</textarea>

        {{#multi_updateable_translations_and_locale_associations.0}}
          <div class="controls multi-updateable-translations muted">
            <span>Copy to:</span>
            {{#multi_updateable_translations_and_locale_associations}}
              <input type="checkbox" value="{{translation.rfc5646_locale}}"
                {{#locale_association}}
                  {{#checked}}
                    checked
                    {{#uncheckable}}disabled{{/uncheckable}}
                  {{/checked}}
                {{/locale_association}}>
                {{translation.rfc5646_locale}}
              </input>
            {{/multi_updateable_translations_and_locale_associations}}
          </div>
        {{/multi_updateable_translations_and_locale_associations.0}}

        <button class="small default copy-source">Copy from source</button>
        <button class="small default convert-source">Convert source</button>

        <span class="controls">
          {{#controls}}
            <button class="square approve">
              <i class="fa fa-check"></i>
            </button>
            <button class="square reject">
              <i class="fa fa-ban"></i>
            </button>
          {{/controls}}
          <button class="default square expand-link">
            <i class="fa fa-pencil-square-o"></i>
          </button>
        </span>

        <div class="notes">
          <div class="half tips"></div>
          <div class="half alerts"></div>
        </div>
      </div>
    </div>

    <!-- INFO SIDE -->
    <div class="eight columns right">
      <div class="info-side"> 
        <p class="source-copy">{{{source_copy}}}</p>

  
        <dl class="additional-info">

          {{#context}}
            <div class="item context">
              <dt> Context </dt>
              <dd>{{context}}</dd>
            </div>
          {{/context}}
          
          <div class="item">
            <dt> Key </dt>
            <dd>{{key}}</dd>
          </div>
          <div class="item">
            <dt> Source </dt>
            <dd>{{source}}</dd>
          </div>

          {{#translator}}
            <div class="item">
              <dt> Translated by </dt>
              <dd>{{translator}}</dd>
            </div>
          {{/translator}}

          {{#reviewer}}
            {{#approved}}
              <div class="item approved">
                <dt> Approved by </dt>
                <dd>{{reviewer}}</dd>
              </div>
            {{/approved}}
            {{^approved}}
              <div class="item rejected">
                <dt> Rejected by </dt>
                <dd>{{reviewer}}</dd>
              </div>
            {{/approved}}
          {{/reviewer}}

          <div class="item fuzzy-matches">
          </div>
        </dl>

      </div>
    </div>
  </div> 
  <div class="entry-spacer"></div>   
</div>
