$(document).ready () ->
  # Default source/target locales
  sourceLocale = JSON.parse("<%= escape_javascript @source_locale.to_json %>")
  targetLocales = JSON.parse("<%= escape_javascript @target_locales.to_json %>")
  
  # Create a new glossary entry list
  new GlossaryList(
    $('#glossary'), "<%= glossary_sources_url %>", "<%= glossary_sources_url(format:'json') %>"
    sourceLocale, targetLocales,
    $('#settings'), $('#add-entry'),
    "<%= current_user.role %>", <%= current_user.approved_rfc5646_locales.to_json %>
  );
