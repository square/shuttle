- content_for :file_name do
  = 'views/devise/sessions/passwords/edit'
- content_for :shuttle_logo do 
  = image_tag("shuttle_white.png")
- content_for :class do
  = controller_name
- content_for :id do 
  = [controller_name, action_name].join('-')

ruby:
  flash.now[:alert] = resource.errors.full_messages.unshift('Errors:') unless resource.errors.empty?

.row.row-modal
  .three.columns &nbsp;
  .ten.columns 
    h1 Change your password
    p Enter a new password 
    .body-portion
      .row.active
        .three.columns &nbsp;
        = form_for(resource, url: user_password_path, html: {method: :patch, class: 'four columns greywashed'}) do |f|
          = f.hidden_field :reset_password_token
          div
            = f.password_field :password, placeholder: "Password", required: true
          div
            = f.password_field :password_confirmation, placeholder: "Password", required: true
          div
            = f.submit "Change my password", class: 'submit sign-in'
          div 
            a href="#{new_user_session_path}" Sign in to Shuttle

        .three.columns &nbsp;
      
        
    .footer-portion 
      .row  

  .three.columns &nbsp;
