ruby:
  if current_user.approved_locales.any?
    approved_locales = current_user.approved_locales.map { |locale| [locale.name, locale.rfc5646] }
    approved_locales.unshift ['my locales', current_user.approved_locales.map(&:rfc5646).join(',')]
    approved_locales.unshift ['all locales', nil]
  end

- if current_user.approved_locales.any?
  = select_tag 'homepage_commits_filter__rfc5646_locales', options_for_select(approved_locales, @homepage_commits_filter__rfc5646_locales.join(','))
- else
  = text_field_tag 'homepage_commits_filter__rfc5646_locales', @homepage_commits_filter__rfc5646_locales.join(','), placeholder: 'Locale', class: 'locale-field'
