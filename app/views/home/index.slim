- content_for :shuttle_title do
  = "Dashboard - Shuttle"
- content_for :file_name do
  = 'views/home/index'

= render partial: 'home/items', locals: { item_type: 'commit', items: @commits }
= render partial: 'home/items', locals: { item_type: 'article', items: @articles }

- if Shuttle::Configuration.features.enable_assets
  = render partial: 'home/items', locals: { item_type: 'asset', items: @assets }

- if Shuttle::Configuration.workbench.show_article_groups
  = render partial: 'home/items', locals: { item_type: 'group', items: @groups}
