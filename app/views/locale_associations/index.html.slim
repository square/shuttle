- content_for :shuttle_title do
  = "Locale Associations"
- content_for :file_name do
  = 'views/locale_associations/index'
- content_for :footer do
  true

.header
  .pull-right
    button.primary href=new_locale_association_path Add Locale Association
  h1 Locale Associations

hr.divider

.border
  table.table.hover-rows
    thead
      tr
        th Source Locale
        th Target Locale
        th Checked
        th Uncheck Disabled
    tbody
      - @locale_associations.each do |locale_association|
        tr onclick="document.location = '#{edit_locale_association_path(locale_association)}'"
          td = locale_association.source_rfc5646_locale
          td = locale_association.target_rfc5646_locale
          td = locale_association.checked
          td = locale_association.uncheck_disabled
